<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd"
    default-autowire="byName">


    <bean id="dealController" class="deals.controller.DealController">
    </bean>

    <bean id="dealHeaderJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="dealController" />
        <property name="targetMethod" value="dealHeader" />
    </bean>


    <bean id="integrationHandlerTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
          <property name="jobDetail" ref="dealHeaderJobDetail"/>
           <property name="cronExpression" value="22 55 * * * ?"/>        <!-- sec min hour day month ? year (every hour)  -->
    </bean>

     

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean" lazy-init="false" autowire="no">
        <property name="schedulerName" value="Quartz" />
        <property name="triggers">
            <list>
                
                <ref bean="integrationHandlerTrigger"/>
              
            </list>
        </property>
            <property name="quartzProperties">
            <props>
                <prop key="org.quartz.threadPool.threadCount">25</prop>
            </props>
        </property>
    </bean>
    
   
</beans> 